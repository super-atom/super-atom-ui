mixin menuItem(page)
  nav.nav
    .nav__logo
      a.nav__link(
        class=page === "index" ? "nav__link--active" : "",
        href='/index.html',
        title='index'
      )

    .nav__link-wrap
      a.nav__link(
        class=page === "about" ? "nav__link--active" : "",
        href='/about.html',
        title='about'
      ) ABOUT
      a.nav__link(
        class=page === "docs" ? "nav__link--active" : "",
        href='/docs.html',
        title='docs'
      ) DOCS
      a.nav__link(
        class=page === "ingredient" ? "nav__link--active" : "",
        href='/ingredient.html',
        title='ingredient'
      ) INGREDIENT
      a.nav__link(
        class=page === "example" ? "nav__link--active" : "",
        href='/example.html',
        title='example'
      ) EXAMPLE
      a.nav__link(
        class=page === "contact" ? "nav__link--active" : "",
        href='/contact.html',
        title='contact'
      ) CONTACT
    .nav__download-wrap
      a.icon(
        href='https://github.com/super-atom/super-atom-ui',
        target='_blank'
      )
        i.fa-brands.fa-github
      a.button(
        href='https://github.com/super-atom/super-atom-ui',
        target='_blank',
        data-type='outlined-reverse'
      ) DOWNLOAD
    .nav__toggle-wrap
      button#nav__toggle.button.js-nav__toggle-btn BTN
