mixin header(page)
  header#header.header
    nav.nav
      .nav__dim
      .nav__logo
        a.nav__link(
          class=page === "index" ? "nav__link--active" : "",
          href='/index.html',
          title='index'
        )
      .nav__link-wrap
        a.nav__link(
          class=page === "about" ? "nav__link--active" : "",
          href='/about.html',
          title='about'
        ) ABOUT
          a.nav__link(
            class=page === "guide" ? "nav__link--active" : "",
            href='/guide.html',
            title='guide'
          ) GUIDE
        a.nav__link(
          class=page === "docs" ? "nav__link--active" : "",
          href='/docs.html',
          title='docs'
        ) DOCS
        a.nav__link(
          class=page === "ingredient" ? "nav__link--active" : "",
          href='/ingredient.html',
          title='ingredient'
        ) INGREDIENT
        a.nav__link(
          class=page === "component" ? "nav__link--active" : "",
          href='/component.html',
          title='component'
        ) COMPONENT
      .nav__download-wrap
        +link_button({target: 'blank', href: 'https://github.com/super-atom/super-atom-ui'})
          i.icon.fa-brands.fa-github
      .nav__toggle-wrap
        +button({type:'outlined-reverse'}).js_nav__toggle_btn
          i.icon.fa-solid.fa-bars
